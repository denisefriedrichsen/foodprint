<div class="container-fluid">
  <%= render 'shared/banner-featured', collection: @new_season_product, as: :new_season_product %>
  <div class="products-index-current-month">
    <h3>This is what <strong> <%= Date::MONTHNAMES[Date.today.month] %> </strong> brings in <strong>Berlin</strong> on your plate</h3>
  </div>
  <div class="products-index-icons">
      <ul id="myTab" role="tablist">
        <div class="products-index-icons-lis">
        <li class="nav-item">
          <a class="product-index-tabs active fruits" id="fruits-tab" data-toggle="tab" href="#fruits" role="tab" aria-controls="fruits" aria-selected="true">
            <%= image_tag "fruits.svg", class: "category" %></a>
        </li>
        <li class="nav-item">
          <a class="product-index-tabs vegetables" id="vegetables-tab" data-toggle="tab" href="#vegetables" role="tab" aria-controls="vegetables" aria-selected="true">
            <%= image_tag "vegetables.svg", class: "category" %></a>
        </li>
        <li class="nav-item">
          <a class="product-index-tabs cereals" id="cereals-tab" data-toggle="tab" href="#cereals" role="tab" aria-controls="cereals" aria-selected="true">
            <%= image_tag "cereals.svg", class: "category" %></a>
        </li>
        <li class="nav-item">
          <a class="product-index-tabs dairy" id="dairy-tab" data-toggle="tab" href="#dairy" role="tab" aria-controls="dairy" aria-selected="true">
            <%= image_tag "dairy.svg", class: "category" %></a>
        </li>
        <li class="nav-item">
          <a class="product-index-tabs meat" id="meat-tab" data-toggle="tab" href="#meat" role="tab" aria-controls="meat" aria-selected="true">
            <%= image_tag "meat.svg", class: "category" %></a>
        </li>
         </div>
      </ul>
  </div>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="fruits" role="tabpanel" aria-labelledby="list-tab">
        <%= render partial: 'shared/product-card', collection: @fruits, as: :product %>
      </div>
      <div class="tab-pane fade show active" id="vegetables" role="tabpanel" aria-labelledby="list-tab">
        <%= render partial: 'shared/product-card', collection: @vegetables, as: :product %>
      </div>
      <div class="tab-pane fade show active" id="cereals" role="tabpanel" aria-labelledby="list-tab">
        <%= render partial: 'shared/product-card', collection: @cereals, as: :product %>
      </div>
      <div class="tab-pane fade show active" id="dairy" role="tabpanel" aria-labelledby="list-tab">
        <%= render partial: 'shared/product-card', collection: @dairy, as: :product %>
      </div>
      <div class="tab-pane fade show active" id="meat" role="tabpanel" aria-labelledby="list-tab">
        <%= render partial: 'shared/product-card', collection: @meat, as: :product %>
      </div>

  </div>

  </div>


