<%= link_to producer_path(producer) do %>
  <div class="card-producer">
      <% if current_user.voted_for? producer  %>
        <%= link_to producer_downvote_path(producer), method: :patch, class: "button is-link" do %>
          <span class="icon">
            <i class="fas fa-heart heart-empty card-product-heart"></i>
          </span>
        <% end %>
      <% else %>
        <%= link_to producer_upvote_path(producer), method: :patch, class: "button is-link" do %>
          <span class="icon">
            <i class="fas fa-heart heart-full card-product-heart"></i>
          </span>
        <% end %>
      <% end %>
    <%= image_tag producer.photo, class:"card-producer-img" %>
    <div class="card-producer-body">
      <h3><%=producer.company_name%></h3>
      <div class="card-producer-address">
        <% if producer.street.length > 15 %>
          <p><%= producer.street[0..14]%>..</p>
        <% else %>
          <p><%= producer.street %></p>
        <% end %>
        <p><%=producer.city%></p>
        <p><%=producer.region%></p>
      </div>
      <div class="card-producer-distance">
        <% if params[:search].present? %>
          <p><%=producer.distance_to(params[:search]).to_i%>km</p>
        <% else %>
          <p><%=producer.distance_to(current_user).to_i%>km</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
